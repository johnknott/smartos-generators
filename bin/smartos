#!/usr/bin/env ruby

lib = File.expand_path(File.dirname(__FILE__) + '/../lib')
$LOAD_PATH.unshift(lib) if File.directory?(lib) && !$LOAD_PATH.include?(lib)

require 'smartos/generators'
include SmartOS::Generators

args = ARGV.dup

begin
  command = args.shift.strip
  within_project = File.exist?('Smartosfile')

  if within_project
    raise UnknownCommandError unless %w{up down console wizard}.include?(command)
  else
    raise UnknownCommandError unless command == 'new'
  end

  Command.run(command, args)
rescue  UnknownCommandError, NoMethodError
  puts Command.usage(within_project)
end